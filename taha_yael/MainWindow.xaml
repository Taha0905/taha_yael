<Window x:Class="taha_yael.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:taha_yael"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DarkSlateBlue">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Entrez le nom du pays :" Margin="0,0,0,5"/>
            <TextBox x:Name="CountryNameTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Rechercher" Click="SearchButton_Click" Width="100" Margin="0,0,0,10"/>

            <!-- Ajoutez des TextBlocks pour afficher les informations sur le pays -->
            <TextBlock x:Name="NameTextBlock" Text="" Margin="0,0,0,5"/>
            <TextBlock x:Name="CapitalTextBlock" Text="" Margin="0,0,0,5"/>
            <TextBlock x:Name="PopulationTextBlock" Text="" Margin="0,0,0,5"/>
            <TextBlock x:Name="RegionTextBlock" Text="" Margin="0,0,0,5"/>
            <!-- Ajout de l'image pour afficher le drapeau -->
            <Image x:Name="FlagImage" Grid.Row="6" Margin="5" Width="100" Height="100"/>

            <!-- Ajoutez d'autres TextBlocks pour afficher d'autres informations si nécessaire -->
        </StackPanel>
    </Grid>
</Window>
